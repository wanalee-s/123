<script>
  const months = ['January','February','March','April','May','June','July','August','September','October','November','December'];
  const DOW = ['SUN','MON','TUE','WED','THU','FRI','SAT'];

  // October 2023 starts on Sunday
  // State map: 0=other, 1=avail, 2=limited, 3=full
  const stateMap = {
    // prev month fill (Sep)
    'prev-24': 0, 'prev-25': 0, 'prev-26': 0, 'prev-27': 0, 'prev-28': 0, 'prev-29': 0, 'prev-30': 0,
    // Oct
    1:1, 2:1, 3:2, 4:2, 5:3, 6:1, 7:1,
    8:1, 9:1, 10:2, 11:2, 12:1, 13:1, 14:1,
    15:1, 16:1, 17:1, 18:1, 19:1, 20:1, 21:1,
    22:1, 23:1, 24:1, 25:1, 26:1, 27:1, 28:1,
    // next month fill (Nov)
    'next-29':0,'next-30':0,'next-31':0,'next-1':0
  };

  let curYear = 2023, curMonth = 9; // October = 9
  let selStart = null, selEnd = null;

  function renderCal() {
    document.getElementById('monthTitle').textContent = `${months[curMonth]} ${curYear}`;
    const grid = document.getElementById('calGrid');
    grid.innerHTML = '';

    const firstDay = new Date(curYear, curMonth, 1).getDay();
    const daysInMonth = new Date(curYear, curMonth + 1, 0).getDate();
    const prevDays = new Date(curYear, curMonth, 0).getDate();
    const today = new Date();

    // Prev month fill
    for (let i = firstDay - 1; i >= 0; i--) {
      const d = prevDays - i;
      const cell = makeCell(d, 'other-month');
      grid.appendChild(cell);
    }

    // Current month
    for (let d = 1; d <= daysInMonth; d++) {
      const state = stateMap[d] ?? 1;
      let cls = '';
      if (state === 1) cls = 'avail-day';
      else if (state === 2) cls = 'limited-day';
      else if (state === 3) cls = 'full-day';

      const cell = makeCell(d, cls);

      // Range highlight
      if (selStart && selEnd) {
        const lo = Math.min(selStart, selEnd), hi = Math.max(selStart, selEnd);
        if (d > lo && d < hi) cell.classList.add('in-range');
        if (d === lo || d === hi) {
          cell.classList.add('selected');
          if (d === hi) {
            const check = document.createElement('div');
            check.className = 'sel-check';
            check.innerHTML = `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><polyline points="20 6 9 17 4 12"/></svg>`;
            cell.appendChild(check);
          }
        }
      } else if (selStart && d === selStart) {
        cell.classList.add('selected');
      }

      // Today indicator
      if (curYear === today.getFullYear() && curMonth === today.getMonth() && d === today.getDate()) {
        const dot = document.createElement('div');
        dot.className = 'today-indicator';
        cell.appendChild(dot);
      }

      // Full label
      if (state === 3) {
        const lbl = document.createElement('div');
        lbl.className = 'full-label'; lbl.textContent = 'Full';
        cell.appendChild(lbl);
      }

      if (state !== 3) {
        cell.addEventListener('click', () => handleClick(d));
      }
      grid.appendChild(cell);
    }

    // Next month fill
    const total = firstDay + daysInMonth;
    const remaining = total % 7 === 0 ? 0 : 7 - (total % 7);
    for (let d = 1; d <= remaining; d++) {
      grid.appendChild(makeCell(d, 'other-month'));
    }

    updateSelInfo();
  }

  function makeCell(d, extraClass) {
    const cell = document.createElement('div');
    cell.className = 'cal-cell' + (extraClass ? ' ' + extraClass : '');
    const num = document.createElement('div');
    num.className = 'day-num'; num.textContent = d;
    cell.appendChild(num);
    return cell;
  }

  function handleClick(d) {
    if (!selStart || (selStart && selEnd)) {
      selStart = d; selEnd = null;
    } else {
      if (d === selStart) { selStart = null; }
      else { selEnd = d; }
    }
    renderCal();
  }

  function updateSelInfo() {
    const el = document.getElementById('selInfo');
    if (!selStart) {
      el.innerHTML = 'Click a date to start selecting your stay';
    } else if (!selEnd) {
      el.innerHTML = `Check-in: <span>${months[curMonth].slice(0,3)} ${selStart}</span> â€” now select check-out`;
    } else {
      const lo = Math.min(selStart, selEnd), hi = Math.max(selStart, selEnd);
      const nights = hi - lo;
      el.innerHTML = `<span>${months[curMonth].slice(0,3)} ${lo}</span> â†’ <span>${months[curMonth].slice(0,3)} ${hi}</span> &nbsp;Â·&nbsp; ${nights} night${nights>1?'s':''}`;
    }
  }

  document.getElementById('prevBtn').addEventListener('click', () => {
    curMonth--; if (curMonth < 0) { curMonth = 11; curYear--; }
    selStart = null; selEnd = null; renderCal();
  });
  document.getElementById('nextBtn').addEventListener('click', () => {
    curMonth++; if (curMonth > 11) { curMonth = 0; curYear++; }
    selStart = null; selEnd = null; renderCal();
  });
  document.getElementById('todayBtn').addEventListener('click', () => {
    const t = new Date();
    curYear = t.getFullYear(); curMonth = t.getMonth();
    selStart = null; selEnd = null; renderCal();
  });

  document.getElementById('searchBtn').addEventListener('click', () => {
    if (!selStart) { alert('Please select check-in date first!'); return; }
    const lo = selEnd ? Math.min(selStart, selEnd) : selStart;
    const hi = selEnd ? Math.max(selStart, selEnd) : selStart;
    alert(`Searching rooms: ${months[curMonth].slice(0,3)} ${lo} â†’ ${months[curMonth].slice(0,3)} ${hi}`);
  });

  renderCal();

  // â”€â”€ Sidebar toggle â”€â”€
  const hamburger = document.getElementById('hamburgerBtn');
  const sidebar   = document.getElementById('sidebar');
  const overlay   = document.getElementById('sidebarOverlay');

  function openSidebar()  { sidebar.classList.add('open'); overlay.classList.add('open'); }
  function closeSidebar() { sidebar.classList.remove('open'); overlay.classList.remove('open'); }

  hamburger.addEventListener('click', () => {
    sidebar.classList.contains('open') ? closeSidebar() : openSidebar();
  });
  overlay.addEventListener('click', closeSidebar);

  document.querySelector('.sidebar-nav').addEventListener('click', e => {
    if (e.target.tagName === 'A') {
      document.querySelectorAll('.sidebar-nav a').forEach(a => a.classList.remove('active'));
      e.target.classList.add('active');
      closeSidebar();
    }
  });

  document.querySelector('.logout-btn').addEventListener('click', () => {
    if (confirm('Logout?')) closeSidebar();
  });
</script>
</body>
</html>
