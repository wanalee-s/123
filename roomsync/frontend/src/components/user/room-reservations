<script>
// â”€â”€ SIDEBAR â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
const _ham = document.getElementById('hamburgerBtn');
const _sb  = document.getElementById('sidebar');
const _ov  = document.getElementById('sidebarOverlay');
const sbOpen  = () => { _sb.classList.add('open');  _ov.classList.add('open');  };
const sbClose = () => { _sb.classList.remove('open'); _ov.classList.remove('open'); };
_ham.addEventListener('click', () => _sb.classList.contains('open') ? sbClose() : sbOpen());
_ov.addEventListener('click', sbClose);
document.querySelectorAll('#sidebar .sidebar-nav a').forEach(a => {
  a.addEventListener('click', () => {
    document.querySelectorAll('#sidebar .sidebar-nav a').forEach(x => x.classList.remove('active'));
    a.classList.add('active'); sbClose();
  });
});
document.querySelector('.logout-btn').addEventListener('click', () => {
  if (confirm('Sign out?')) sbClose();
});

// â”€â”€ CAROUSEL â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
const track    = document.getElementById('carouselTrack');
const prevBtn  = document.getElementById('prevBtn');
const nextBtn  = document.getElementById('nextBtn');
const dotsEl   = document.getElementById('carouselDots');
const curIdxEl = document.getElementById('curIdx');
const cards    = track.querySelectorAll('.booking-card');
const total    = cards.length;
document.getElementById('totalCount').textContent = total;
let current = 0;

// Build dots
cards.forEach((_, i) => {
  const d = document.createElement('div');
  d.className = 'dot' + (i === 0 ? ' active' : '');
  d.addEventListener('click', () => goTo(i));
  dotsEl.appendChild(d);
});

function goTo(idx) {
  current = Math.max(0, Math.min(total - 1, idx));
  const cardW = cards[0].offsetWidth + 14;
  track.scrollTo({ left: cardW * current, behavior: 'smooth' });
  refresh();
}

function refresh() {
  curIdxEl.textContent = current + 1;
  prevBtn.classList.toggle('hidden', current === 0);
  nextBtn.classList.toggle('hidden', current === total - 1);
  dotsEl.querySelectorAll('.dot').forEach((d, i) => d.classList.toggle('active', i === current));
}

prevBtn.addEventListener('click', () => goTo(current - 1));
nextBtn.addEventListener('click', () => goTo(current + 1));

// Sync on scroll
let scrollT;
track.addEventListener('scroll', () => {
  clearTimeout(scrollT);
  scrollT = setTimeout(() => {
    const cardW = cards[0].offsetWidth + 14;
    current = Math.round(track.scrollLeft / cardW);
    refresh();
  }, 80);
});

// Mouse drag
let dragging = false, startX = 0, scrollOrigin = 0;
track.addEventListener('mousedown', e => {
  dragging = true; startX = e.pageX; scrollOrigin = track.scrollLeft;
  track.classList.add('grabbing');
});
window.addEventListener('mousemove', e => {
  if (!dragging) return;
  track.scrollLeft = scrollOrigin - (e.pageX - startX);
});
window.addEventListener('mouseup', () => {
  if (!dragging) return;
  dragging = false; track.classList.remove('grabbing');
  const cardW = cards[0].offsetWidth + 14;
  goTo(Math.round(track.scrollLeft / cardW));
});

refresh();

// â”€â”€ BUTTON HANDLERS â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
function reportIssue(btn) {
  if (btn.classList.contains('reported')) return;
  btn.innerHTML = `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" style="width:14px;height:14px"><polyline points="20 6 9 17 4 12"/></svg> Issue Reported â€“ Support Notified`;
  btn.classList.add('reported');
}

function checkOutEarly(btn) {
  if (!confirm('Check out early from this room?')) return;
  btn.textContent = 'âœ“ Checked Out';
  btn.style.borderColor = 'var(--green)';
  btn.style.color = 'var(--green)';
  btn.disabled = true;
  const pill = btn.closest('.bc-body').querySelector('.status-pill');
  pill.className = 'status-pill';
  pill.style.cssText = 'background:#F1F5F9;color:var(--muted)';
  pill.textContent = 'Checked Out';
}

function cancelBook(btn) {
  if (!confirm('à¸¢à¸·à¸™à¸¢à¸±à¸™à¸¢à¸à¹€à¸¥à¸´à¸à¸à¸²à¸£à¸ˆà¸­à¸‡?')) return;
  btn.textContent = 'âœ“ Cancelled';
  btn.style.color = 'var(--muted)';
  btn.style.borderColor = 'var(--border)';
  btn.disabled = true;
  const pill = btn.closest('.bc-body').querySelector('.status-pill');
  pill.className = 'status-pill';
  pill.style.cssText = 'background:#F1F5F9;color:var(--muted)';
  pill.textContent = 'Cancelled';
}

// â”€â”€ HISTORY ROW CLICK â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
document.querySelectorAll('.hist-row').forEach(row => {
  row.addEventListener('click', () => {
    row.style.borderColor = 'var(--pink)';
    row.style.boxShadow = '0 0 0 3px rgba(240,62,142,.12)';
    setTimeout(() => { row.style.borderColor = ''; row.style.boxShadow = ''; }, 600);
  });
});

// â”€â”€ LOAD MORE â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
document.getElementById('loadMoreBtn').addEventListener('click', function() {
  this.textContent = 'Loadingâ€¦';
  setTimeout(() => {
    this.textContent = 'No older records found';
    this.disabled = true;
    this.style.color = 'var(--muted)';
  }, 900);
});
</script>
</body>
</html>
