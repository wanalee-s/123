<script>
  // View toggle
  const gridBtn = document.getElementById('gridBtn');
  const listBtn = document.getElementById('listBtn');
  gridBtn.addEventListener('click', () => {
    gridBtn.classList.add('active'); gridBtn.classList.remove('inactive');
    listBtn.classList.add('inactive'); listBtn.classList.remove('active');
  });
  listBtn.addEventListener('click', () => {
    listBtn.classList.add('active'); listBtn.classList.remove('inactive');
    gridBtn.classList.add('inactive'); gridBtn.classList.remove('active');
  });

  // Pagination
  document.querySelectorAll('.pg-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      if (btn.querySelector('svg') || btn.classList.contains('dots')) return;
      document.querySelectorAll('.pg-btn').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
    });
  });

  // Remove capacity filter pill
  document.querySelectorAll('.filter-pill.has-value').forEach(pill => {
    pill.querySelector('.remove')?.addEventListener('click', (e) => {
      e.stopPropagation();
      pill.classList.remove('has-value');
      pill.innerHTML = `Capacity <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width:13px;height:13px"><polyline points="6 9 12 15 18 9"/></svg>`;
    });
  });

  // ‚îÄ‚îÄ Sidebar ‚îÄ‚îÄ
  const _ham = document.getElementById('hamburgerBtn');
  const _sb  = document.getElementById('sidebar');
  const _ov  = document.getElementById('sidebarOverlay');
  const _open  = () => { _sb.classList.add('open');  _ov.classList.add('open');  };
  const _close = () => { _sb.classList.remove('open'); _ov.classList.remove('open'); };
  _ham.addEventListener('click', () => _sb.classList.contains('open') ? _close() : _open());
  _ov.addEventListener('click', _close);
  document.querySelectorAll('#sidebar .sidebar-nav a').forEach(a => {
    a.addEventListener('click', () => {
      document.querySelectorAll('#sidebar .sidebar-nav a').forEach(x => x.classList.remove('active'));
      a.classList.add('active'); _close();
    });
  });
  document.querySelector('.logout-btn').addEventListener('click', () => { if(confirm('Sign out?')) _close(); });
</script>
</body>
</html>

