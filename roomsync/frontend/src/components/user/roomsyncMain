<script>
  // â”€â”€ Sidebar â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  const _ham = document.getElementById('hamburgerBtn');
  const _sb  = document.getElementById('sidebar');
  const _ov  = document.getElementById('sidebarOverlay');
  const sbOpen  = () => { _sb.classList.add('open');  _ov.classList.add('open');  };
  const sbClose = () => { _sb.classList.remove('open'); _ov.classList.remove('open'); };
  _ham.addEventListener('click', () => _sb.classList.contains('open') ? sbClose() : sbOpen());
  _ov.addEventListener('click', sbClose);
  document.querySelectorAll('#sidebar .sidebar-nav a').forEach(a => {
    a.addEventListener('click', () => {
      document.querySelectorAll('#sidebar .sidebar-nav a').forEach(x => x.classList.remove('active'));
      a.classList.add('active'); sbClose();
    });
  });
  document.querySelector('.logout-btn').addEventListener('click', () => { if(confirm('Sign out?')) sbClose(); });

  // â”€â”€ Filter helpers â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  function toggleCb(row) { row.querySelector('.cb').classList.toggle('on'); }
  function toggleTag(btn) {
    const isOn = btn.classList.contains('on');
    btn.classList.toggle('on', !isOn);
    btn.classList.toggle('off', isOn);
  }

  // â”€â”€ Slider â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  const track = document.getElementById('sliderTrack');
  const fill  = document.getElementById('sliderFill');
  const thumb = document.getElementById('sliderThumb');
  const valEl = document.getElementById('sliderVal');
  let dragging = false;

  function setSlider(pct) {
    pct = Math.max(0, Math.min(100, pct));
    fill.style.width  = pct + '%';
    thumb.style.left  = pct + '%';
    const cap = Math.round(pct / 100 * 20);
    valEl.textContent = cap + '+';
  }
  thumb.addEventListener('mousedown', e => { dragging = true; e.preventDefault(); });
  window.addEventListener('mousemove', e => {
    if (!dragging) return;
    const r = track.getBoundingClientRect();
    setSlider((e.clientX - r.left) / r.width * 100);
  });
  window.addEventListener('mouseup', () => dragging = false);
  setSlider(25);

  // â”€â”€ Pagination â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  document.querySelectorAll('.pg').forEach(btn => {
    btn.addEventListener('click', () => {
      if (btn.id === 'pg-prev' || btn.id === 'pg-next') return;
      document.querySelectorAll('.pg').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
    });
  });

  // â”€â”€ Heart toggle â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  const heartBtn = document.getElementById('heartBtn');
  let hearted = true;
  heartBtn.addEventListener('click', () => {
    hearted = !hearted;
    const svg = heartBtn.querySelector('svg');
    svg.setAttribute('fill', hearted ? 'currentColor' : 'none');
  });

  // â”€â”€ Reserve button â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  document.querySelectorAll('.reserve-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      btn.textContent = 'âœ“ Reserved';
      btn.style.background = '#16a34a';
      btn.disabled = true;
      setTimeout(() => {
        btn.textContent = 'Reserve\nRoom';
        btn.style.background = '';
        btn.disabled = false;
      }, 2000);
    });
  });
</script>
